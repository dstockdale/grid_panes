# Copy this to .env and fill in your values
# DO NOT commit .env to version control

# Database
DATABASE_URL=postgresql://gridpanes:your_postgres_password@postgres:5432/gridpanes_prod
POSTGRES_PASSWORD=your_postgres_password

# Phoenix secrets (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=your_secret_key_base_here
LIVE_VIEW_SIGNING_SALT=your_live_view_signing_salt_here

# Docker Hub (for image registry)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password

# Server details
SERVER_IP=your_linode_server_ip
DOMAIN=your-domain.com
EMAIL=your-email@example.com